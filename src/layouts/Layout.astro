---
import { ClientRouter } from "astro:transitions";
import Navbar from "../components/navbar.astro";
import '../styles/globals.css';
---

<!doctype html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Your docs on browser</title>
  </head>
  <body class={`flex antialiased overflow-y-hidden text-white bg-[#000000]`}>
    <Navbar/>
    <div class="w-full p-2 h-screen">
      <div
        class="border bg-[#080808] p-14 border-[#5C5C5C] overflow-y-auto rounded-xl h-[98vh]"
      >
        <slot />
      </div>
    </div>
  </body>
  <ClientRouter/>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>

<script>
  document.addEventListener('astro:page-load', () => {
    console.log('astro event')
  })
</script>
