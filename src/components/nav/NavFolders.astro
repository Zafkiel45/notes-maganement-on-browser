---
import { Hash } from "../../svg/hash";

export type folderObject = {name: string, folder_id: number}

interface Props {
  folders: folderObject[];
}

const { folders } = Astro.props;
---

{
  folders.map((folder: folderObject) => {
    return (
      <a href={`/folders/${folder.folder_id}/filesTypes`} data-history="push">
        <li class="flex w-full items-center group gap-1 transition-colors hover:bg-[#00d0ff53] active:bg-[#00d0ff90] cursor-pointer rounded-md py-1 px-2 truncate">
          <div>
            <Hash className="fill-gray-400 group-hover:fill-cyan-200 transition-colors" />
          </div>
          <div class="folder-name">{folder.name}</div>
        </li>
      </a>
    );
  })
}
