---
import { AddFolder } from "../svg/AddFolder";
import { AddNote } from "../svg/AddNote";
import NavFolders from "./navbar/NavFolders.astro";
import NavSectionDivider from "./navbar/NavSectionDivider.astro";
import NavButton from "./navbar/NavButton.astro";
import Modal from "./navbar/modal.astro";

const folders = await fetch("http://localhost:3001/folders");
const folderArr = await folders.json();
---

<nav class="w-[20vw] bg-[#151515] p-5 h-screen flex flex-col gap-3 overflow-y-auto border-r border-[#5C5C5C]">
  <NavSectionDivider section="âž• Criar" client:load />

  <div class="flex flex-col lg:gap-2">
    <NavButton id="" content="Criar nova pasta" client:load>
      <AddFolder />
    </NavButton>
    <NavButton id="openModal" content="Criar nova nota" client:load>
      <AddNote />
    </NavButton>
  </div>

  <NavSectionDivider section="ðŸ“‚  Criar" client:load />
  <ul class="w-full flex flex-col gap-4">
    <NavFolders folders={folderArr} />
  </ul>

  <Modal folders={folderArr}/>
</nav>

<script>
  const closeModalBtn = document.querySelector('#openModal') as HTMLButtonElement;
  const modal = document.querySelector('#modal') as HTMLDivElement;

  closeModalBtn.addEventListener('click', () => {
      modal.classList.remove('hidden');
      modal.classList.add('flex');
  });

</script>
